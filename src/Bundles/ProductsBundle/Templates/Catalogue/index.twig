{# {% extends 'MainBundle/Templates//template.twig' %} #}
{% extends 'MainBundle/Templates/templateFlat.twig' %}


{% block styles %}

    <!-- Bootstrap -->
    <link rel="stylesheet" href="/flat/css/bootstrap.min.css">
    <!-- jQuery UI -->
    <link rel="stylesheet" href="/flat/css/plugins/jquery-ui/jquery-ui.min.css">
    <!-- Theme CSS -->
    <link rel="stylesheet" href="/flat/css/style.css">
    <!-- Color CSS -->
    <link rel="stylesheet" href="/flat/css/themes.css">

<style>

    .bg {
    position: absolute;
    margin-left: auto;
    margin-top: auto
    }
    .background-wrap {
        width: 100%;
        height: 100%;
        position: absolute;
        top: 40px;
        left: 0;
        z-index: -1;
        overflow: hidden;
    }
    .background {
        background: url('/img/wall_pos.jpg');
        background-size: cover;
        filter: blur(10px);
        height: 105%;
        position: relative;
        width: 105%;
        right: -2.5%;
        left: -2.5%;
        top: -2.5%;
        bottom: -2.5%;
    }


    #left {
        width:0px;
    }
    #main {
        left: 0px;
        margin-left: 0px;
        padding-bottom: 0px;
    }
    .wallpaper {
        width: 100%;
    }
    .pricing {
        min-width: 170px;
    }
    .logo {
        width: 150px;
        height: 119.5px
    }
</style>

    
{% endblock %}

{% block main %}
 <div class="container-fluid">
                <div class="page-header">
                    <div class="pull-left">
                        <h1>Home</h1>
                    </div>
                    <div class="pull-right">
                        <ul class="minitiles">
                            <li class="grey">
                                <a href="#">
                                    <i class="fa fa-cogs"></i>
                                </a>
                            </li>
                            <li class="lightgrey">
                                <a href="#">
                                    <i class="fa fa-globe"></i>
                                </a>
                            </li>
                        </ul>
                        <ul class="stats">
                            
                            <li class="lightred">
                                <i class="fa fa-calendar"></i>
                                <div class="details">
                                    <span class="big">February 22, 2013</span>
                                        <span>Wednesday, 13:56</span>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="breadcrumbs">
                    <ul>
                        <li>
                            <a href="/">Inicio</a>
                        </li>
                        
                    </ul>
                    <div class="close-bread">
                        <a href="#">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>




	<div class="container-fluid" id="content">
<br>
{% if messages.fails is defined %}
    {% for message in messages.fails %}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>Code 400:</strong> {{message}}.
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    </div>
    
    {% endfor %}
{% endif %}
            <div class="container">
				<div class="title">
					Lista de Productos
				</div>

                <div class="showroom">
                    <table style="widteh: 550px" class="table table-striped" id="example">

                        <thead class="thead-dark" >
                            <tr>
                                <td>id</td>
                                <td>grupo</td>
                                <td>producto</td>
                                <td style="text-align: righ">precio</td>
                                <td>Tipo</td><td>Marca</td>
                                <td><a href="{{ path_for('newProduct') }}"><button type="button" class="btn btn-primary">+ New Product</button></a></td>
                            </tr>
                        </thead>
                        <tbody>
                        {% for product in products %}

                            <tr>
                                <td>{{ product.id }}</td>
                                <td>{{ product.code }}</td>
                                <td><a href="/catalogue/product/show/{{product.id }}">{{ product.description | ucwords }}</a></td>
                                <td style="text-align: right">{{ product.price1 | number_format(2, '.', ',' ) }}</td>
                                <td>{% if product.product_type.description is defined %}{{ product.product_type.description | upper }}{% endif %}</td>
                                <td>{{ product.brand.description | upper }}</td>
                                <td>
                                    <a href="{{ path_for('showFormProduct', {'product_id': product.id}) }}"><button type="button" class="btn btn-warning">Editar</button></a>
                                    <a href="{{ path_for('deleteProduct', { 'product_id': product.id}) }}"><button type="button" class="btn btn-danger">Borrar</button></a>
                                    </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>


                </div>
            </div>
		
	</div>


</div>
{% endblock %}
