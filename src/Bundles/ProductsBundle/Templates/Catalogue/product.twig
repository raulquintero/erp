{% extends 'MainBundle/Templates/templateFlat.twig' %}


{% block styles %}

    <!-- Bootstrap -->
    <link rel="stylesheet" href="/flat/css/bootstrap.min.css">
    <!-- jQuery UI -->
    <link rel="stylesheet" href="/flat/css/plugins/jquery-ui/jquery-ui.min.css">
    <!-- Theme CSS -->
    <link rel="stylesheet" href="/flat/css/style.css">
    <!-- Color CSS -->
    <link rel="stylesheet" href="/flat/css/themes.css">

<style>

    .bg {
    position: absolute;
    margin-left: auto;
    margin-top: auto
    }
    .background-wrap {
        width: 100%;
        height: 100%;
        position: absolute;
        top: 40px;
        left: 0;
        z-index: -1;
        overflow: hidden;
    }
    .background {
        background: url('/img/wall_pos.jpg');
        background-size: cover;
        filter: blur(10px);
        height: 105%;
        position: relative;
        width: 105%;
        right: -2.5%;
        left: -2.5%;
        top: -2.5%;
        bottom: -2.5%;
    }


    #left {
        width:0px;
    }
    #main {
        left: 0px;
        margin-left: 0px;
        padding-bottom: 0px;
    }
    .wallpaper {
        width: 100%;
    }
    .pricing {
        min-width: 170px;
    }
    .logo {
        width: 150px;
        height: 119.5px
    }
</style>

    
{% endblock %}

{% block main %}

<div class="container-fluid">
                <div class="page-header">
                    <div class="pull-left">
                        <h1>Productos</h1>
                    </div>
                    <div class="pull-right">
                        <ul class="minitiles">
                            <li class="grey">
                                <a href="#">
                                    <i class="fa fa-cogs"></i>
                                </a>
                            </li>
                            <li class="lightgrey">
                                <a href="#">
                                    <i class="fa fa-globe"></i>
                                </a>
                            </li>
                        </ul>
                        <ul class="stats">
                            
                            <li class="lightred">
                                <i class="fa fa-calendar"></i>
                                <div class="details">
                                    <span class="big">February 22, 2013</span>
                                        <span>Wednesday, 13:56</span>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="breadcrumbs">
                    <ul>
                        <li>
                            <a href="/">Inicio</a>
                        </li>
                        
                    </ul>
                    <div class="close-bread">
                        <a href="#">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>





	<div class="container" id="content">
    <div class="title">Detalle del producto</div>

{% if messages.success is defined %}
    {% for message in messages.success %}
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <strong>{{message}}</strong>
    </div>
    {% endfor %}
{% endif %}
{% if messages.fails is defined %}
    {% for message in messages.fails %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
    <strong> {{message}}.</strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    </div>
    
    {% endfor %}
{% endif %}

				<div >
					<h3>
                        {{ product.description }}
                        <td><a href="/catalogue/product/edit/{{product.id}}"><button type="button" class="btn btn-warning">Editar</button></a>
                    </h3>
				</div>

                <div class="showroom">
                    <table class="table" >

                        <thead style="background-color: lightblue;">
                            <tr>
                                <td>Descripcion</td>
                            </tr>
                        </thead>
                        <tbody>

                            <tr><td>{{ product.description | upper }}</td></tr>
                        </tbody>
                    </table>
                    <table class="table" >

                        <thead style="background-color: lightblue;">
                            <tr>
                                <td>Precio</td>
                            </tr>
                        </thead>
                        <tbody>

                    <tr><td>$ {{ product.price1 |number_format(2, '.', ',' ) }}</td></tr>
                        </tbody>
                    </table>
                    <table class="table">

                        <thead style="background-color: lightblue;">
                            <tr>
                                <td>Tipo de Producto</td>
                            </tr>
                        </thead>
                        <tbody>

                            <tr><td>{% if product.product_type.description is defined %}{{ product.product_type.description }}{% endif %} </td></tr>
                        </tbody>
                    </table>

                    <table class="table">

                        <thead style="background-color: lightblue;">
                            <tr>
                                <td>Marca</td>
                            </tr>
                        </thead>
                        <tbody>

                            <tr><td>{{ product.brand.description }}</td></tr>
                            {# <tr><td>Ciudad : {{ product.supplier.city.name }}</td></tr> #}
                        </tbody>
                    </table>
                <b>Propiedades</b>
                <hr>
                <table class="table">
                <tr><td style="width: 250px">
                    <b>{{ product.prod_prop_detail.property.description }}</b>
                    <select class="custom-select" size="5">
                    {# <option selected>Open this select menu</option> #}
                    {% for property in product.prod_prop_detail.property.prop_detail %}
                
                    <option value="property.id">{{ property.detail }}</option>
                    
                    
                    {% endfor %}

                    </select></td>
                 <td>
                 <table>
                 <tr><td colspan="2">ToDo: agregar relacion para tallas en ropa</td></tr>
                 <tr><td><b>Tallas</b></td><td>Cantidad</td></tr>
                 <tr><td>xs</td><td><input type="number" name="" value="0"></td></tr>
                 <tr><td>s</td><td><input type="number" name="" value="0"></td></tr>
                 <tr><td>m</td><td><input type="number" name="" value="0"></td></tr>
                 <tr><td>l</td><td><input type="number" name="" value="0"></td></tr>
                 <tr><td>xl</td><td><input type="number" name="" value="0"></td></tr>
                 </table>
                 </td>
                 </tr>
                 </table>                       

                </div>
	</div>



</div>
{% endblock %}
