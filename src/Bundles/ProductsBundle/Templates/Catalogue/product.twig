{% extends 'MainBundle/Templates/templateFlat.twig' %}

{% block styles %}

<!-- Bootstrap -->
<link rel="stylesheet" href="/flat/css/bootstrap.min.css">
<!-- jQuery UI -->
<link rel="stylesheet" href="/flat/css/plugins/jquery-ui/jquery-ui.min.css">
<!-- Theme CSS -->
<link rel="stylesheet" href="/flat/css/style.css">
<!-- Color CSS -->
<link rel="stylesheet" href="/flat/css/themes.css">

<style>

 	#left {
        width:0px;
    }
    #main {
        left: 0px;
        margin-left: 0px;
        padding-bottom: 0px;
    }
	
</style>

	
{% endblock %}

{% block main %}

<div class="container-fluid">
    <div class="page-header">
        <div class="pull-left">
            <h1>Productos</h1>
        </div>
        <div class="pull-right">
            <ul class="minitiles">
                <li class="grey">
                    <a href="#">
                        <i class="fa fa-cogs"></i>
                    </a>
                </li>
                <li class="lightgrey">
                    <a href="#">
                        <i class="fa fa-globe"></i>
                    </a>
                </li>
            </ul>
            <ul class="stats">
                
                <li class="lightred">
                    <i class="fa fa-calendar"></i>
                    <div class="details">
                        <span class="big">February 22, 2013</span>
                            <span>Wednesday, 13:56</span>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <div class="breadcrumbs">
        <ul>
            <li>
                <a href="/">Inicio / productos</a>
            </li>
            
        </ul>
        <div class="close-bread">
            <a href="#">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>

</div>


<div class="container">
{% if messages.success is defined %}
    {% for message in messages.success %}
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <strong>{{message}}</strong>
    </div>
    {% endfor %}
{% endif %}
{% if messages.fails is defined %}
    {% for message in messages.fails %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
    <strong> {{message}}.</strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    </div>
    
    {% endfor %}
{% endif %}

				{# <div >
					<h3>
                        {{ product.description }}
                        <td><a href="/catalogue/product/edit/{{product.id}}"><button type="button" class="btn btn-warning">Editar</button></a>
                    </h3>
				</div> #}


    <div class="col-sm-12">
        <div class="box box-color box-bordered">
            <div class="box-title">
                <h3>
                    {# <i class="fa fa-user"></i> #}
                    {{ product.description | ucwords }} 
                </h3>
            </div>
            <div class="box-content nopadding">
                <ul class="tabs tabs-inline tabs-top">
                    <li class="active">
                        <a href="#profile" data-toggle="tab">
                            <i class="fa fa-user"></i>Producto</a>
                    </li>
                    <li>
                        <a href="#notifications" data-toggle="tab">
                            <i class="fa fa-bullhorn"></i>Propiedades</a>
                    </li>
                </ul>
                <div class="tab-content padding tab-content-inline tab-content-bottom">
                    <div class="tab-pane active" id="profile">
                        <div class="row">
                            <div class="col-sm-8">
                            <table class="table" >

                                <thead style="background-color: lightblue;">
                                    <tr>
                                        <td>Descripcion</td>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr><td>{{ product.description | ucfirst }}</td></tr>
                                </tbody>
                            </table>
                            <table class="table" >

                                <thead style="background-color: lightblue;">
                                    <tr>
                                        <td>Precio</td>
                                    </tr>
                                </thead>
                                <tbody>

                                <tr><td>$ {{ product.price1 |number_format(2, '.', ',' ) }}</td></tr>
                                </tbody>
                            </table>
                            <table class="table">

                                <thead style="background-color: lightblue;">
                                    <tr>
                                        <td>Tipo de Producto</td>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr><td>{% if product.product_type.description is defined %}{{ product.product_type.description }}{% endif %} </td></tr>
                                </tbody>
                            </table>
                            <table class="table">

                                <thead style="background-color: lightblue;">
                                    <tr>
                                        <td>Marca</td>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr><td>{{ product.brand.description }}</td></tr>
                                    {# <tr><td>Ciudad : {{ product.supplier.city.name }}</td></tr> #}
                                </tbody>
                            </table>
                            </div>
                            <div class="col-sm-4">
                                <a href="/catalogue/product/edit/{{product.id}}"><button type="button" class="btn btn-success btn-lg">Editar Producto</button></a>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="notifications">
                    
                        <div class="row">
                            <div class="col-sm-8">
                                <table class="table">
                                <thead>
                                    <tr><th>id</th><th>Propiedad</th></tr>
                                </thead>
                                <tbody>
                                    {% for property in product.properties %}
                                    <tr><td>{{ property.id }}</td><td>{{ property.description }}</tr>
                                    {% endfor %}
                                </tbody>
                                </table>
                            </div>
                            <div class="col-sm-4">
                                <a href="/catalogue/product/edit/{{product.id}}"><button type="button" class="btn btn-success btn-lg">Editar Propiedades</button></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



</div>

	
		
{% endblock %}

