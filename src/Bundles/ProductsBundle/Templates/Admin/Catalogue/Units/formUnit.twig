{% extends 'MainBundle/Templates/templateFlat.twig' %}


{% block styles %}

    <!-- Bootstrap -->
    <link rel="stylesheet" href="/flat/css/bootstrap.min.css">
    <!-- jQuery UI -->
    <link rel="stylesheet" href="/flat/css/plugins/jquery-ui/jquery-ui.min.css">
    <!-- Theme CSS -->
    <link rel="stylesheet" href="/flat/css/style.css">
    <!-- Color CSS -->
    <link rel="stylesheet" href="/flat/css/themes.css">

<style>

    .bg {
    position: absolute;
    margin-left: auto;
    margin-top: auto
    }
    .background-wrap {
        width: 100%;
        height: 100%;
        position: absolute;
        top: 40px;
        left: 0;
        z-index: -1;
        overflow: hidden;
    }
    .background {
        background: url('/img/wall_pos.jpg');
        background-size: cover;
        filter: blur(10px);
        height: 105%;
        position: relative;
        width: 105%;
        right: -2.5%;
        left: -2.5%;
        top: -2.5%;
        bottom: -2.5%;
    }


    #left {
        width:0px;
    }
    #main {
        left: 0px;
        margin-left: 0px;
        padding-bottom: 0px;
    }
    .wallpaper {
        width: 100%;
    }
    .pricing {
        min-width: 170px;
    }
    .logo {
        width: 150px;
        height: 119.5px
    }
</style>

    
{% endblock %}

{% block main %}


	<div class="container" id="content">
		<div id="main">
			<div class="title">
				Unit Id:
				{{ unit.id }}
			</div>

                <form method="post" action="{{ path_for('saveUnit', { 'id': unit.id }) }}">
                {# /admin/catalogue/unit/save/{{ unit.id }} #}
                    <input
                    type="hidden" name="unit[id]" value="{% if unit.id is defined %}{{ unit.id }}{% endif %}">
                    {# <input type="hidden" name="unit[parent_id]" value="{{ unit.id }}"> #}
                    <div class="form-group">
                        <label for="inputDescription">Description</label>
                        <input type="text" class="form-control" value="{% if unit.description is defined %}{{ unit.description }}{% endif %}" name="unit[description]" id="description">
                    </div>
                    
                    <br><br>
                    <button type="submit" class="btn btn-primary">
                        {% if unit.id > 0 %}Salvar
                        {% else %}
                            Insertar
                        {% endif %}
                    </button>

			    </form>


			<div></div>
		</div>
	{% endblock %}
