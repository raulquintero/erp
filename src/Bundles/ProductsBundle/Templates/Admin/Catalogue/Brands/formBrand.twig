{% extends 'MainBundle/Templates/templateFlat.twig' %}

{% block styles %}

<!-- Bootstrap -->
<link rel="stylesheet" href="/flat/css/bootstrap.min.css">
<!-- jQuery UI -->
<link rel="stylesheet" href="/flat/css/plugins/jquery-ui/jquery-ui.min.css">
<!-- Theme CSS -->
<link rel="stylesheet" href="/flat/css/style.css">
<!-- Color CSS -->
<link rel="stylesheet" href="/flat/css/themes.css">

<style>

 	#left {
        width:0px;
    }
    #main {
        left: 0px;
        margin-left: 0px;
        padding-bottom: 0px;
    }
	
</style>

	
{% endblock %}

{% block main %}

<div class="container-fluid">
    <div class="page-header">
        <div class="pull-left">
            <h1>Marcas :: Editar</h1>
        </div>
        <div class="pull-right">
            <ul class="minitiles">
                <li class="grey">
                    <a href="#">
                        <i class="fa fa-cogs"></i>
                    </a>
                </li>
                <li class="lightgrey">
                    <a href="#">
                        <i class="fa fa-globe"></i>
                    </a>
                </li>
            </ul>
            <ul class="stats">
                
                <li class="lightred">
                    <i class="fa fa-calendar"></i>
                    <div class="details">
                        <span class="big">February 22, 2013</span>
                            <span>Wednesday, 13:56</span>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <div class="breadcrumbs">
        <ul>
            <li><a href="/">Inicio</a><i class="fa fa-angle-right"></i></li>
            <li><a href="/">Marcas</a></li>
            
        </ul>
        <div class="close-bread">
            <a href="#">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>

</div>





<div class="container">

<br><br>
                    <div class="form-group">
                        <label for="inputDescription">Marca Id</label>
                        <input type="text" disabled class="form-control" value="{% if brand.id is defined %}{{ brand.id }}{% endif %}" name="brand[description]" id="description">
                    </div>
                <form method="post" action="{{ path_for('saveBrand', { 'id': brand.id }) }}">
                {# /admin/catalogue/brand/save/{{ brand.id }} #}
                    <input
                    type="hidden" name="brand[id]" value="{% if brand.id is defined %}{{ brand.id }}{% endif %}">
                    {# <input type="hidden" name="brand[parent_id]" value="{{ brand.id }}"> #}
                    <div class="form-group">
                        <label for="inputDescription">Description</label>
                        <input type="text" class="form-control" value="{% if brand.description is defined %}{{ brand.description }}{% endif %}" name="brand[description]" id="description">
                    </div>
                    
                    <br><br>
                    <button type="submit" class="btn btn-primary">
                        {% if brand.id > 0 %}Salvar
                        {% else %}
                            Insertar
                        {% endif %}
                    </button>

			    </form>


</div>
		
{% endblock %}

