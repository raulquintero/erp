{% extends 'MainBundle/Templates/templateFlat.twig' %}


{% block styles %}

    <!-- Bootstrap -->
    <link rel="stylesheet" href="/flat/css/bootstrap.min.css">
    <!-- jQuery UI -->
    <link rel="stylesheet" href="/flat/css/plugins/jquery-ui/jquery-ui.min.css">
    <!-- Theme CSS -->
    <link rel="stylesheet" href="/flat/css/style.css">
    <!-- Color CSS -->
    <link rel="stylesheet" href="/flat/css/themes.css">

<style>

    .bg {
    position: absolute;
    margin-left: auto;
    margin-top: auto
    }
    .background-wrap {
        width: 100%;
        height: 100%;
        position: absolute;
        top: 40px;
        left: 0;
        z-index: -1;
        overflow: hidden;
    }
    .background {
        background: url('/img/wall_pos.jpg');
        background-size: cover;
        filter: blur(10px);
        height: 105%;
        position: relative;
        width: 105%;
        right: -2.5%;
        left: -2.5%;
        top: -2.5%;
        bottom: -2.5%;
    }


    #left {
        width:0px;
    }
    #main {
        left: 0px;
        margin-left: 0px;
        padding-bottom: 0px;
    }
    .wallpaper {
        width: 100%;
    }
    .pricing {
        min-width: 170px;
    }
    .logo {
        width: 150px;
        height: 119.5px
    }
</style>

    
{% endblock %}

{% block main %}


	<div class="container" id="content">
		<div id="main">
			<div class="title">
				Family Id:
				{{ family.id }}
			</div>

                <form method="post" action="{{ path_for('saveFamily') }}">
                {# /admin/catalogue/family/save/{{ family.id }} #}
                    <input
                    type="hidden" name="family[id]" value="{% if family.id is defined %}{{ family.id }}{% endif %}">
                    {# <input type="hidden" name="family[parent_id]" value="{{ family.id }}"> #}
                    <div class="form-group">
                        <label for="inputDescription">Description</label>
                        <input type="text" class="form-control" value="{% if family.description is defined %}{{ family.description }}{% endif %}" name="family[description]" id="description">
                    </div>
                    <div class="form-group">
                        <label for="inputDescription">Nivel</label>
                        <input type="text" class="form-control" value="{% if family.level is defined %}{{ family.level }}{% endif %}" name="family[level]" id="level">
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="family[sublevel]" value="1" id="sublevel" {% if family.sublevel is defined and family.sublevel %}checked{% endif %}>
                        <label class="form-check-label" for="defaultCheck1">
                            Tiene SubNiveles
                        </label>
                    </div>
                    <br>
                    <div class="form-select">
                        <label for="selectSupplier">Parent</label>
                        <select class="form-control form-control-lg" name="family[parent_id]">
                            <option value="0">Main</option>
                        {% for parentFamily in families %}
                            <option value="{{ parentFamily.id  }}"  {% if family.parent_id is defined and family.parent_id == parentFamily.id %}selected{% endif %}>{{ parentFamily.description }}</option>
                        {% endfor %}
                        </select>
                    </div>
                    <br><br>
                    <button type="submit" class="btn btn-primary">
                        {% if family.id > 0 %}Salvar
                        {% else %}
                            Insertar
                        {% endif %}
                    </button>

			    </form>


			<div></div>
		</div>
	{% endblock %}
