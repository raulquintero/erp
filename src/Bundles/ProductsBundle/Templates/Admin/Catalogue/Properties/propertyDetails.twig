{% extends 'MainBundle/Templates/templateFlat.twig' %}

{% block styles %}

<!-- Bootstrap -->
<link rel="stylesheet" href="/flat/css/bootstrap.min.css">
<!-- jQuery UI -->
<link rel="stylesheet" href="/flat/css/plugins/jquery-ui/jquery-ui.min.css">
<!-- Theme CSS -->
<link rel="stylesheet" href="/flat/css/style.css">
<!-- Color CSS -->
<link rel="stylesheet" href="/flat/css/themes.css">

<style>

 	#left {
        width:0px;
    }
    #main {
        left: 0px;
        margin-left: 0px;
        padding-bottom: 0px;
    }
	
</style>

	
{% endblock %}

{% block main %}

<div class="container-fluid">
    <div class="page-header">
        <div class="pull-left">
            <h1>Propiedades</h1>
        </div>
        <div class="pull-right">
            <ul class="minitiles">
                <li class="grey">
                    <a href="#">
                        <i class="fa fa-cogs"></i>
                    </a>
                </li>
                <li class="lightgrey">
                    <a href="#">
                        <i class="fa fa-globe"></i>
                    </a>
                </li>
            </ul>
            <ul class="stats">
                
                <li class="lightred">
                    <i class="fa fa-calendar"></i>
                    <div class="details">
                        <span class="big">February 22, 2013</span>
                            <span>Wednesday, 13:56</span>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <div class="breadcrumbs">
        <ul>
            <li>
                <a href="/">Inicio / productos</a>
            </li>
            
        </ul>
        <div class="close-bread">
            <a href="#">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>

</div>





<div class="container">

<h3>Listado de Propiedades</h3>
	<br>
	{% if messages.fails is defined %}
		{% for message in messages.fails %}
			<div class="alert alert-warning alert-dismissible fade show" role="alert">
				<strong>Code 400:</strong>
				{{message}}.
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>

		{% endfor %}
	{% endif %}




<table class="table table-hover" id="example">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Marca</th>
      {% if category.id is defined %}{% set categoryId = category.id %} {% else %}{% set categoryId = 0 %} {% endif %}
      <th><a href="/admin/catalogue/property/detail/form/0"><button type="button" class="btn btn-primary">Agregar </button></a></th>
    </tr>
  </thead>
  <tbody>
    {% for propertyDetail in propertyDetails %}
    <tr>
      <td scope="row">{{ propertyDetail.id }}</td>
      <td>{{ propertyDetail.detail}} </td>
        <td>
        <a href="/admin/catalogue/property/detail/form/{{ propertyDetail.id }}"><button type="button" class="btn btn-warning">Editar</button></a>
        <a href="/admin/catalogue/property/detail/delete/{{ propertyDetail.id }}"><button type="button" class="btn btn-danger">Eliminar</button></a></td>
    
    </tr>
    {% endfor %}
  </tbody>
</table>


	
</div>
		
{% endblock %}

