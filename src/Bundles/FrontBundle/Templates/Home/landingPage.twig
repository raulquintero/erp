{% extends 'FrontBundle/Templates/templateFlat.twig' %}



{% block styles %}

	<!-- Bootstrap -->
	<link rel="stylesheet" href="/flat/css/bootstrap.min.css">
	<!-- jQuery UI -->
	<link rel="stylesheet" href="/flat/css/plugins/jquery-ui/jquery-ui.min.css">
	<!-- Theme CSS -->
	<link rel="stylesheet" href="/flat/css/style.css">
	<!-- Color CSS -->
	<link rel="stylesheet" href="/flat/css/themes.css">

<style>

	.bg {
	position: absolute;
	margin-left: auto;
	margin-top: auto
	}
	.background-wrap {
		width: 100%;
		height: 100%;
		position: absolute;
		top: 40px;
		left: 0;
		z-index: -1;
		overflow: hidden;
	}
	.background {
		background: url('/img/wall_pos.jpg');
		background-size: cover;
		filter: blur(10px);
		height: 105%;
		position: relative;
		width: 105%;
		right: -2.5%;
		left: -2.5%;
		top: -2.5%;
		bottom: -2.5%;
	}

	.tiles li.long a{
		width: 180px;
	}
	.tiles li a{
	height: 60px;
	}
	#left {
		width:0px;
	}
	#main {
		left: 0px;
		margin-left: 0px;
		padding-bottom: 0px;
	}
	.wallpaper {
		width: 100%;
	}
</style>

	
{% endblock %}

{% block main %}
	<div class="background-wrap">
		<div class="background"></div>
	</div>
	<div class="bg">
		<div class="container">
			<br><br><br>
			<div class="page-header">
				<div class="pull-left"></div>
				<div class="pull-right" style="border-left:2px solid gray;padding-left:10px;">
					<h1>[ {{ "now"|date("Y.m.d") }} ]</h1>
					<br><br>
					<p style="width:400px; font-size:32px; font-style: italic">El fracaso es parte de la vida,
									si no fracasas, no aprendes y si no aprendes, no cambias.
					</p>
					<div style="font-size:20px; text-align: right; padding-right:70px">Paulo Coehlo</div>
				</div>
			</div>

		</div>

		
		
{% endblock %}

{% block scripts %}

	<!-- jQuery -->
	<script src="/flat/js/jquery.min.js"></script>
	<!-- Nice Scroll -->
	<script src="/flat/js/plugins/nicescroll/jquery.nicescroll.min.js"></script>
	<!-- jQuery UI -->
	<script src="/flat/js/plugins/jquery-ui/jquery-ui.js"></script>
	<!-- slimScroll -->
	<script src="/flat/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>
	<!-- Bootstrap -->
	<script src="/flat/js/bootstrap.min.js"></script>
	<!-- Form -->
	<script src="/flat/js/plugins/form/jquery.form.min.js"></script>





{% endblock %}